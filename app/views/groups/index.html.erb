<section id="groups_index">
  <%= render 'shared/navbar', backButtonLink: nil, sectionTitle: 'Groups', additionalLink: nil %>

  <div id="gift">
    <span>Gift credit</span>
    <span>$45.00</span>
  </div>
  
  <div id="card-container">
    <% @groups.each do |group| %>
      <div class="card">
        <%= image_tag group.icon_thumbnail %>
        <h2><%= link_to group.name, group_entries_path(group) %></h2>
        <span>$<%= group.total_payments %></span>
      </div>
    <% end %>
  </div>

  <div class="btn-container">
    <%= link_to 'Create a new Group', new_group_path, class: 'btn-add-group' %>
  </div>
</section>
